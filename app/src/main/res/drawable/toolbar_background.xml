<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Background color of the toolbar -->
        <item>
            <shape android:shape="rectangle">
                <solid android:color="#EDF8F0" />
            </shape>
        </item>
        <!-- Top border -->
        <item android:top="0dp" android:right="-20px" android:bottom="-20px" android:left="-20px">
            <shape android:shape="rectangle">
                <solid android:color="#EDF8F0" />
                <size android:height="20px" />
            </shape>
        </item>
        <!-- Bottom border -->
        <item android:top="-20px" android:right="-20px" android:bottom="0dp" android:left="-20px">
            <shape android:shape="rectangle">
                <solid android:color="#EDF8F0" />
                <size android:height="20px" />
            </shape>
        </item>
    </layer-list>


</selector>